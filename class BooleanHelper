class BooleanHelper {

    /**
     * Any scalar value to boolean
     *
     * @param         $value : value to parse
     * @param  bool   $default : false (pessimist)
     * @param  array  $custom_positives : custom positive rules
     * @param  array  $custom_negatives : custom negative rules
     * @return bool
     */
    public static function anyValueToBoolean($value, $default = false, $custom_positives = [], $custom_negatives = [])
    {
        if (is_null($value)) {
            return false;
        }
        if (!is_scalar($value)) {
            if (is_array($value)) {
                return !empty($value);
            }
            return false;
        }
        $value = trim(mb_strtolower(strval($value)));
        if (is_numeric($value)) {
            return !empty($value);
        } // numbers
        if (empty($value)) {
            return false;
        }

        $positives = array();
        array_push($positives, '+'); // plus
        array_push($positives, 'âœ“', 'âœ”', 'â˜‘', 'âœ…', 'Ë…', 'Ñµ'); // check symbols
        array_push($positives, 'âœ”ï¸', 'â˜‘ï¸', 'âœ…ï¸'); // check emoji
        array_push($positives, 'ğŸ‘', 'ğŸ‘ğŸ»', 'ğŸ‘ğŸ¼', 'ğŸ‘ğŸ½', 'ğŸ‘ğŸ¾', 'ğŸ‘ğŸ¿'); // thumbs up emoji
        array_push($positives, 'true', 'yes', 'y', 'v'); // english
        array_push($positives, 'Ğ¸ÑÑ‚Ğ¸Ğ½Ğ°', 'Ğ´Ğ°', 'Ğ´', 'ĞµÑÑ‚ÑŒ'); // russian
        $positives = array_merge($positives, $custom_positives);

        $negatives = array();
        array_push($negatives, '-', 'âˆ’', 'â€“', 'â€”', 'â€•'); // hyphen, minus, ndash, mdash, horizontal line
        array_push($negatives, 'x', 'Ñ…', 'Ã—', 'âœ˜', 'âœ–', 'â•³', 'â˜“', 'áš·', 'ã„¨', 'ãƒ¡', 'â…©', 'Ï‡', 'ê­“'); // cross symbols
        array_push($negatives, 'âœ–ï¸', 'âŒ'); // cross emoji
        array_push($negatives, 'ğŸ‘', 'ğŸ‘ğŸ»', 'ğŸ‘ğŸ¼', 'ğŸ‘ğŸ½', 'ğŸ‘ğŸ¾', 'ğŸ‘ğŸ¿'); // thumbs down emoji
        array_push($negatives, 'false', 'no', 'n'); // english
        array_push($negatives, 'Ğ»Ğ¾Ğ¶ÑŒ', 'Ğ½ĞµÑ‚', 'Ğ½'); // russian
        $negatives = array_merge($negatives, $custom_negatives);

        if (in_array($value, $positives)) {
            return true;
        }
        if (in_array($value, $negatives)) {
            return false;
        }
        return $default;
    }

}
